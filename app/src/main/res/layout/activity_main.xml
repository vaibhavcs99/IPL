<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ball1"
    tools:context="com.example.rupalisonawane.ipl.MainActivity">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="408dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:src="@drawable/mi"
                app:civ_border_color="#000000"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/team_a_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ee981a"
                    android:textSize="48sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="18dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/team_a_wicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="#ee981a"
                    android:textSize="48sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:paddingBottom="3dp"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/oneA"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape"
                    android:onClick="setOne"
                    android:text="+1" />

                <Button
                    android:id="@+id/twoA"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape"
                    android:onClick="setTwo"
                    android:text="+2" />
            </LinearLayout>

            <Button
                android:id="@+id/fourA"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape"
                android:onClick="setFour"
                android:text="Four" />


            <Button
                android:id="@+id/sixA"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape"
                android:onClick="setSix"

                android:text="SIX" />

            <Button
                android:id="@+id/wicketA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape"
                android:onClick="setWicket"
                android:text="Wicket" />

        </LinearLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:background="#6e6d6d" />

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="407dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image2"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:src="@drawable/csk"
                app:civ_border_color="#000000"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/team_b_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="#0366b4"
                    android:textSize="48sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="18dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/team_b_wicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#0366b4"
                    android:textSize="48sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/oneB"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape2"
                    android:onClick="setOne"
                    android:text="+1" />

                <Button
                    android:id="@+id/twoB"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape2"
                    android:onClick="setTwo"
                    android:text="+2" />
            </LinearLayout>


            <Button
                android:id="@+id/fourB"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape2"
                android:onClick="setFour"
                android:text="Four" />

            <Button
                android:id="@+id/sixB"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape2"
                android:onClick="setSix"
                android:text="SIX" />

            <Button
                android:id="@+id/wicketB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape2"
                android:onClick="setWicket"
                android:text="Wicket" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reset"
        android:layout_below="@+id/linear1"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape3"
        android:onClick="setToss"
        android:text="Toss" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape3"
        android:onClick="setReset"
        android:text="Reset" />

</RelativeLayout>
